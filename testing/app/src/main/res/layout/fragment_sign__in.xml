<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#33f"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omii026.testing.Fragments.Sign_In">

    <ImageView
        android:background="@drawable/userlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/layout_login"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:padding="30dp"
        android:visibility="visible"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_signup"
        android:layout_toEndOf="@+id/layout_signup">

        <TextView
            android:text="Login To your account"
            android:textColor="#33f"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/loginEmail"
            android:hint="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#33f"
            android:textColor="#33f"

            android:layout_above="@+id/LoginPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <!--<Button-->
            <!--style="?android:attr/buttonStyleSmall"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="sign up"-->
            <!--android:id="@+id/signup"-->
            <!--android:textColor="#456DFF"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_alignParentRight="true" />-->

        <EditText
            android:id="@+id/LoginPassword"
            android:hint="password"
            android:inputType="textPassword"
            android:textColorHint="#33f"
            android:textColor="#33f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign in"
            android:id="@+id/signin"
            android:textColor="#fff"
            android:textSize="12dp"
            android:background="@drawable/circular_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/userset1"
        android:background="@drawable/userset1"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />

</RelativeLayout>
