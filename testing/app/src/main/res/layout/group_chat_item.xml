<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">

    <RelativeLayout
        android:id="@+id/group_chat_list"
        android:orientation="horizontal"
        android:background="#222"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"

            android:background="@android:drawable/ic_menu_gallery"
            android:id="@+id/groupChatImage"
            android:layout_width="40dp"
            android:layout_height="45dp" />
<RelativeLayout
    android:layout_toLeftOf="@id/groupChatImage"
    android:background="@drawable/gchat_item_bg"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginRight="5dp"
       android:id="@+id/groupChatText"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="gvulvcuyfvyuvuyvulyufvuvylhjhow r u?"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="5dp"

            android:id="@+id/groupChatTime"
            android:layout_below="@id/groupChatText"
            android:layout_alignParentRight="true"
            android:text="7:10 PM"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>

    </RelativeLayout>
