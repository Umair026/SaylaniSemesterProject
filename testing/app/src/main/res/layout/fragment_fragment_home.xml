<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/fragment_home_container"
    tools:context="com.example.omii026.testing.Activities.HomeActivity$PlaceholderFragment">


    <View
        android:id="@+id/view_home"
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:background="@drawable/view_drawable"/>



    <RelativeLayout
        android:background="#fff"
        android:layout_below="@id/view_home"
        android:orientation="vertical"
        android:id="@+id/hone_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:text="YOur Home Page"
            android:autoLink="web"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="171dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:background="@drawable/circular_fab"
            android:layout_above="@+id/dropbox"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/dropbox"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circular_fab"
            android:layout_above="@+id/btnFab"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btnFab"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_add_white_18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circular_fab"
            />
        <TextView
            android:id="@+id/text2"
            android:text="Facebook"
            android:textStyle="bold|italic"
            android:background="#fff"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/facebook"
            android:layout_toLeftOf="@+id/facebook"
             />

        <TextView
            android:id="@+id/text1"
            android:textStyle="bold|italic"
            android:text="Dropbox"
            android:background="#fff"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/dropbox"
            android:layout_alignLeft="@+id/text2"
            />

    </RelativeLayout>

</RelativeLayout>
