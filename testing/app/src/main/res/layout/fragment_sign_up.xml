<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#33f"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omii026.testing.Fragments.Sign_up">

    <RelativeLayout
        android:padding="20dp"
        android:layout_marginTop="80dp"
        android:id="@+id/layout_signup"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/f_name"
            android:hint="first name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/l_name"
            android:hint="last name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f_name"
            />

        <EditText
            android:id="@+id/signupUid"
            android:hint="user id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_name"
            />
        <EditText
            android:id="@+id/signupEmail"
            android:hint="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupUid"
            />
        <EditText
            android:id="@+id/signupPassword"
            android:hint="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/create"
            android:text="Create"
            android:layout_width="200dp"
            android:layout_below="@+id/signupPassword"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/userset2"
        android:background="@drawable/userset2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />


</RelativeLayout>
