<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omii026.testing.Fragments.Sign_In">



    <RelativeLayout
        android:paddingLeft="44dp"
        android:paddingRight="44dp"
        android:paddingBottom="15dp"
        android:visibility="visible"
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/loginEmail"
            android:hint="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#80cbc4"
            android:textColor="#80cbc4"
            android:backgroundTint="#80cbc4"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
            android:layout_above="@+id/LoginPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <!--<Button-->
            <!--style="?android:attr/buttonStyleSmall"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="sign up"-->
            <!--android:id="@+id/signup"-->
            <!--android:textColor="#456DFF"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_alignParentRight="true" />-->

        <EditText
            android:id="@+id/LoginPassword"
            android:hint="password"
            android:gravity="center"
            android:inputType="textPassword"
            android:textColorHint="#80cbc4"
            android:textColor="#80cbc4"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"

            android:backgroundTint="#80cbc4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="sign in"

            android:id="@+id/signin"
            android:background="#009688"
            android:textColor="#80cbc4"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/userset1"
        android:background="@drawable/userset1"
        android:layout_width="100dp"
        android:visibility="gone"
        android:layout_height="20dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/logoText"
        android:text="Me"
        android:textColor="#80cbc4"
        android:textStyle="bold|italic"
        android:textSize="35dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_login"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/logoImage"
        android:background="@drawable/one_football_app_icon"
        android:textColor="#80cbc4"
        android:textStyle="bold|italic"
        android:textSize="35dp"
        android:layout_marginBottom="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/logoText"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
