<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:background="@drawable/chat_projects"
            android:id="@+id/group_image1"
            android:layout_width="70dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_image1"
            android:layout_toRightOf="@+id/group_image1"
            android:layout_toEndOf="@+id/group_image1"
            android:id="@+id/linearLayout">

            <TextView
                android:text="Group Name"
                android:textSize="18dp"
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Group Desc"
                android:textSize="18dp"
                android:id="@+id/groupDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Group Owner"
                android:textSize="12dp"
                android:textColor="#22f"
                android:id="@+id/groupOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <ImageView
    android:id="@+id/selector"
    android:src="@drawable/ic_more_vert_black"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginRight="19dp"
    android:layout_marginEnd="19dp"
    android:layout_alignTop="@+id/linearLayout"
    android:layout_alignParentRight="true" />


    </RelativeLayout>
</LinearLayout>