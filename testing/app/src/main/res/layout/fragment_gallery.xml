<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.omii026.me.Fragments.Home">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageShow"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_above="@+id/galleryListView"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/camera"
            android:background="@drawable/ic_gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

        <com.example.omii026.testing.SupportClasses.HorizontalListView
            android:layout_width="match_parent"
            android:id="@+id/galleryListView"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_alignParentBottom="true"/>

        <View
            android:id="@+id/view1"
            android:layout_above="@+id/galleryListView"
            android:background="@drawable/view_drawable"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

    </RelativeLayout>


</RelativeLayout>
