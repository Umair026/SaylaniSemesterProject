<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.omii026.me.Fragments.Home">

    <RelativeLayout
        android:id="@+id/toolbar_gallery"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/toolbar_bg"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/Base.Theme.AppCompat">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ic_back_gallery"
            android:background="@drawable/ic_keyboard_arrow_left_white_24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_appbar"
            android:text="Gallery"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <View
        android:id="@+id/view_gallery"
        android:layout_below="@id/toolbar_gallery"
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:background="@drawable/view_drawable"/>



    <RelativeLayout
        android:layout_below="@id/view_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageShow"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_above="@+id/galleryListView"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/camera"
            android:background="@drawable/ic_gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

        <com.example.omii026.testing.SupportClasses.HorizontalListView
            android:layout_width="match_parent"
            android:id="@+id/galleryListView"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_alignParentBottom="true"/>

        <View
            android:id="@+id/view1"
            android:layout_above="@+id/galleryListView"
            android:background="@drawable/view_drawable"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

    </RelativeLayout>


</RelativeLayout>
