<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#37474f"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omii026.testing.Fragments.Sign_up">

    <RelativeLayout
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp"
        android:id="@+id/layout_signup"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userset2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/f_name"
            android:hint="first name"
            android:textColorHint="#80cbc4"
            android:textColor="#80cbc4"
            android:backgroundTint="#80cbc4"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:textColorHint="#80cbc4"
            android:textColor="#80cbc4"
            android:backgroundTint="#80cbc4"
            android:gravity="center"

            android:id="@+id/l_name"
            android:hint="last name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f_name"
            />

        <EditText
            android:textColorHint="#80cbc4"
            android:textColor="#80cbc4"
            android:backgroundTint="#80cbc4"
            android:gravity="center"

            android:id="@+id/signupUid"
            android:hint="user id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_name"
            />
        <EditText
            android:textColorHint="#80cbc4"
            android:textColor="#80cbc4"
            android:backgroundTint="#80cbc4"
            android:gravity="center"

            android:id="@+id/signupEmail"
            android:hint="email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupUid"
            />
        <EditText
            android:textColorHint="#80cbc4"
            android:textColor="#80cbc4"
            android:backgroundTint="#80cbc4"
            android:gravity="center"

            android:id="@+id/signupPassword"
            android:hint="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/create"
            android:text="Create"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:background="#009688"
            android:textColor="#80cbc4"
            android:layout_below="@+id/signupPassword"
            android:layout_marginTop="30dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/userset2"
        android:background="@drawable/userset2"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />


</RelativeLayout>
